<% include ../partials/header %>
<div class="col.md-12">
    <h1 class="text-center">Create a New Campground</h1>
</div>
    
<div class="row">
    
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="campgroundName">Campground Name</label>
                <input type="text" class="form-control" id="campgroundName" name="name" placeholder="Name">
            </div>
            <label for="campgroundPrice">Campground Price</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" class="form-control" id="campgroundPrice" name="price" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <label for="campgroundImage">Campground Image</label>
                <input type="text" class="form-control" id="campgroundImage" name="image" placeholder="Image url">
            </div>
            <div class="form-group">
                <label for="campgroundDescription">Campground Description</label>
                <textarea class="form-control" id="campgroundDescription" name="description" rows="3" placeholder="Description"></textarea>
            </div>
            <div class="form-group">
                <label for="location">Campground Location</label>
                <input type="text" class="form-control" id="location" name="location" placeholder="Address">
            </div>
            <div class="form-group">
            <button type="submit" class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>