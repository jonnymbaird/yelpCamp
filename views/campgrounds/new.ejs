<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center;">Create a New Campground</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="campgroundName">Campground Name</label>
                <input type="text" class="form-control" id="campgroundName" name="name" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="campgroundPrice">Campground Price</label>
                <input type="number" class="form-control" id="campgroundPrice" name="price" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <label for="campgroundImage">Campground Image</label>
                <input type="text" class="form-control" id="campgroundImage" name="image" placeholder="Image url">
            </div>
            <div class="form-group">
                <label for="campgroundDescription">Campground Description</label>
                <input type="text" class="form-control" id="campgroundDescription" name="description" placeholder="Description">
            </div>
            <div class="form-group">
            <button type="submit" class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>