<% include ../partials/header %>
<div class="row">
    <h1 style="text-align: center;">Edit <%= campground.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="campgroundName">Campground Name</label>
                <input type="text" class="form-control" id="campgroundName" name="campground[name]" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <label for="campgroundPrice">Campground Price</label>
                <input type="number" class="form-control" id="campgroundPrice" name="campground[price]" value="<%= campground.price %>" step="0.01">
            </div>
            <div class="form-group">
                <label for="campgroundImage">Campground Image</label>
                <input type="text" class="form-control" id="campgroundImage" name="campground[image}" value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <label for="campgroundDescription">Campground Description</label>
                <input type="text" class="form-control" id="campgroundDescription" name="campground[description]" value="<%= campground.description %>">
            </div>
            <div class="form-group">
            <button type="submit" class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>